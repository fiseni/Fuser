<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Fuser</AssemblyName>
    <PackageId>Fuser</PackageId>
    <Title>Fuser</Title>
    <Description>MSBuild task for merging assemblies.</Description>
    <Summary>MSBuild task that merges referenced assemblies directly into your project output at build time.</Summary>
    
    <Version>0.0.1-alpha1</Version>
    <PackageTags>fiseni pozitron msbuild assembly merge</PackageTags>
    <PackageReleaseNotes>
    </PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Mono.Cecil" />
    <PackageReference Include="Microsoft.Build.Framework" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" />
  </ItemGroup>

  <ItemGroup>
    <None Include="build\**\*" Pack="true" PackagePath="build\" />
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="build" />
    <None Include="$(OutputPath)\Mono.Cecil*.dll" Pack="true" PackagePath="build" />
  </ItemGroup>

</Project>
